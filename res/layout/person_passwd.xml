<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/background_person">
    
    <LinearLayout 
	   android:layout_width="match_parent"
       android:layout_height="45dp"
       android:orientation="vertical"
       android:gravity="center"
       android:background="#C0ABA5">
       
       <TableLayout 
    android:orientation="vertical"
    android:shrinkColumns="0,1,2,3,4"   
    android:stretchColumns="0,1,2,3,4" 
    android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	    
	     <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent">
	        
		<Button 
           android:layout_width="15dp"
           android:layout_height="30dp"
           android:id="@+id/back"
           android:layout_marginLeft="20dp"
           android:gravity="center"
           android:background="@drawable/backbtn"/>
		
		<Button 
           android:layout_width="5dp"
           android:layout_height="30dp"
           android:layout_marginRight="20dp"
           android:gravity="center"
           android:background="@drawable/blank"/>
       
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乐游湿地·修改密码"
        android:textColor="#FFFFFF"
        android:textSize="16sp" 
        android:gravity="center"
        android:layout_marginRight="2dp"/>
    
    <Button 
           android:layout_width="5dp"
           android:layout_height="30dp"
           android:layout_marginRight="20dp"
           android:gravity="center"
           android:background="@drawable/blank"/>
    
    <Button 
           android:layout_width="15dp"
           android:layout_height="30dp"
           android:layout_marginRight="20dp"
           android:gravity="center"
           android:background="@drawable/blank"/>
    	
    	</TableRow>
    	
    	</TableLayout>
       
       

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="16dp"
        android:visibility="gone"
        android:layout_marginRight="2dp" />

    <TextView
       android:id="@+id/logout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="退出"
       android:textColor="#2A00FF"
       android:textSize="16sp" 
       android:visibility="gone"
       android:layout_marginRight="10dp"/>
    
    </LinearLayout>
    
    <ImageView
        android:layout_gravity="center"
        android:layout_width="78dp"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/passwd" />
    
    <LinearLayout 
    android:layout_width="match_parent"
  	android:layout_height="wrap_content"
  	android:padding="15dip"        
  	android:layout_margin="15dip" 
  	android:orientation="vertical" 
  	android:focusable="true"   
	android:focusableInTouchMode="true">
    
    <EditText
        android:id="@+id/oldpd"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#FFFFFF"
        android:textColorHint = "#FFFFFF" 
        android:background="@drawable/background_login_edit"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/editblank" 
        android:inputType="textPassword"
        android:textCursorDrawable="@null"
        android:ems="10"
        android:hint="旧&#160;密&#160;码" />

    <EditText
        android:id="@+id/newpd"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="#FFFFFF"
        android:textColorHint = "#FFFFFF" 
        android:background="@drawable/background_login_edit"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/editblank" 
        android:inputType="textPassword"
        android:textCursorDrawable="@null"
        android:ems="10"
        android:hint="新&#160;密&#160;码" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="密码必须同时包含数字和字母，不少于6位，并且首位必须是字母"
        android:textColor="#ffa8a8" 
        android:layout_marginBottom="15dp"
        android:textSize="9dp"/>
    
    <Button 
           android:id="@+id/handin"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:layout_alignParentLeft="true"
           android:textColor="#FFFFFF"
           android:text="点击修改密码"
           android:background="@drawable/background_reg"
           />
 

	</LinearLayout>



</LinearLayout>