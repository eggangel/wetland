<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestControl" >
    
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
    
       <LinearLayout 
	   android:layout_width="match_parent"
       android:layout_height="45dp"
       android:orientation="horizontal"
       android:gravity="center"
       android:background="#C0ABA5">
       
    	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乐游湿地·选择问答"
        android:textColor="#FFFFFF"
        android:textSize="16sp" 
        android:layout_marginRight="2dp"/>


    
    	</LinearLayout>
        
            <LinearLayout 
    android:layout_width="match_parent"
  	android:layout_height="wrap_content"
  	android:padding="15dip"        
  	android:layout_margin="15dip" 
  	android:orientation="vertical" 
  	android:background="@drawable/background_login_edit">
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="规则：\n        本游戏共两轮，第一轮答对5道就可以进入第二轮，答错3道即被淘汰。第二轮答对5道，游戏结束。每轮答题总时间为300秒，超时亦会被淘汰。"
        android:textSize="22sp" />
        
        
        
        </LinearLayout>
        

	</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom|center"
        android:layout_marginBottom="35dp"
        android:orientation="horizontal" >
	    
	    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:background="@drawable/music"

         />
	    
	    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
		android:background="@drawable/start"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginBottom="25dp"
         />
    	
    	<Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:background="@drawable/out"

         />
    	
 
    
	</LinearLayout>
	
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal" 
	    android:gravity="bottom|center">
    
    
    
	    <TableLayout 
    android:orientation="vertical"
    android:shrinkColumns="0,1,2,3,4"   
    android:stretchColumns="0,1,2,3,4" 
    android:layout_width="fill_parent"
    android:layout_height="55dp" 
    android:background="#814326">
	    
	     <TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	        
	    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@drawable/button1"
         />
	    
	    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@drawable/button2"
         />
    	
    	<Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@drawable/button3"
         />
    	
    	<Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@drawable/button4"
         />
    	
    	<Button
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@drawable/button5"
         />
    	
    	</TableRow>
    	
    	</TableLayout>
    
	</LinearLayout>

</RelativeLayout>